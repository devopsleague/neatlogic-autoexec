<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="codedriver.module.autoexec.dao.mapper.AutoexecGlobalParamMapper">

    <insert id="insertGlobalParam" parameterType="codedriver.framework.autoexec.dto.global.param.AutoexecGlobalParamVo">
        INSERT INTO `autoexec_global_param` (`id`, `key`, `name`, `type`, `default_value`, `description`, `fcu`,
                                             `fcd`, `lcu`, `lcd`)
        VALUES (#{id}, #{key}, #{name}, #{type}, #{defaultValueStr}, #{description}, #{fcu}, now(3), #{lcu},
                now(3)) ON DUPLICATE KEY
        UPDATE `key` = #{key},
            `name` = #{name},
            `type`= #{type},
            `default_value` = #{defaultValueStr},
            `description` = #{description},
            `lcu` = #{lcu},
            `lcd` = now(3)
    </insert>

    <delete id="deleteGlobalParamById">
        DELETE
        FROM autoexec_global_param
        WHERE id = #{value}
    </delete>

    <select id="checkGlobalParamIsExistsById" resultType="java.lang.Integer">
        select count(1)
        from `autoexec_global_param`
        where `id` = #{value}
    </select>

    <select id="getGlobalParamById" resultType="codedriver.framework.autoexec.dto.global.param.AutoexecGlobalParamVo">
        select `id`,
               `key`,
               `name`,
               `type`,
               `default_value` as defaultValue,
               `description`,
               `fcu`,
               `fcd`,
               `lcu`,
               `lcd`
        from `autoexec_global_param`
        where `id` = #{value}
    </select>

    <select id="getGlobalParamByKey" resultType="codedriver.framework.autoexec.dto.global.param.AutoexecGlobalParamVo">
        select `id`,
               `key`,
               `name`,
               `type`,
               `default_value` as defaultValue,
               `description`,
               `fcu`,
               `fcd`,
               `lcu`,
               `lcd`
        from `autoexec_global_param`
        where `key` = #{value}
        limit 1
    </select>

    <sql id="searchGlobalParam">
        from autoexec_global_param
        <where>
            <if test="keyword != null and keyword != ''">
                and (`key` LIKE CONCAT('%', #{keyword}, '%')
                OR `name` LIKE CONCAT('%',#{keyword}, '%')
                OR `description` LIKE CONCAT('%',#{keyword}, '%'))
            </if>
            <if test="typeList != null and typeList.size()>0">
                and `type` in
                <foreach collection="typeList" item="item" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>
            <if test="defaultValue != null and defaultValue.size() > 0">
                AND (`id` IN
                <foreach collection="defaultValue" item="item" open="(" separator="," close=")">
                    #{item}
                </foreach>
                OR `key` IN
                <foreach collection="defaultValue" item="item" open="(" separator="," close=")">
                    #{item}
                </foreach>
                )
            </if>
        </where>
    </sql>

    <select id="getGlobalParamCount" resultType="int">
        select count(id)
        <include refid="searchGlobalParam"></include>
    </select>

    <select id="searchGlobalParam" resultType="codedriver.framework.autoexec.dto.global.param.AutoexecGlobalParamVo" parameterType="codedriver.framework.autoexec.dto.global.param.AutoexecGlobalParamVo">
        select `id`,
        `key`,
        `name`,
        `type`,
        `default_value` as defaultValue,
        `description`,
        `fcu`,
        `fcd`,
        `lcu`,
        `lcd`
        <include refid="searchGlobalParam"></include>
        ORDER BY lcd DESC
        LIMIT #{startNum}, #{pageSize}
    </select>

    <select id="getGlobalParamIdList" resultType="java.lang.Long">
        select id
        <include refid="searchGlobalParam"></include>
        ORDER BY lcd DESC
        LIMIT #{startNum}, #{pageSize}
    </select>

    <select id="getGlobalParamListByIdList"
            resultType="codedriver.framework.autoexec.dto.global.param.AutoexecGlobalParamVo">
        select `id`,
        `key`,
        `name`,
        `type`,
        `default_value`,
        `description`,
        `fcu`,
        `fcd`,
        `lcu`,
        `lcd`
        from `autoexec_global_param`
        where `id` in
        <foreach collection="idList" item="item" open="(" close=")" separator=",">
            #{item}
        </foreach>
        ORDER BY `lcd` DESC
    </select>

    <select id="checkGlobalParamKeyIsRepeat" resultType="int">
        select count(`id`)
        from autoexec_global_param
        where `id` != #{id}
          and `key` = #{key}
    </select>

    <select id="checkGlobalParamNameIsRepeat" resultType="int">
        select count(`id`)
        from autoexec_global_param
        where `id` != #{id}
          and `name` =#{name}
    </select>

</mapper>
